<h1>
Director #<%=@director_id%> details
</h1>

<p><a href="/directors"> Go back</a></p>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src= "http://robohash.org/<%=@name%>" style="width:250px;">
  </dd>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <tr>
    <%@filmography_movies.each do |movie| %>
    <td>
     <%= movie.id %>
    </td>

    <td>
      <img src="http://robohash.org/<%= movie.title %>" style="width:250px">
    </td>

    <td>
    <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <%= movie.director_id %>
    </td>

    <td>
      <a href="/movies/<%=movie.id%>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
